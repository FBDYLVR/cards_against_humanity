<div id='players' class='ml-3'>
  <ul class="list-group list-group-flush">
    <% @game.players.each do |player| %>
      <li class="list-group-item">
        <% if player == @round.czar %>
          <%= image_tag 'crown.png' %>
        <% end %>

        <% if player.submissions.find_by(round: @round).present? %>
          ✔️
        <% end %>

        <span class='player-name d-inline-block text-truncate'>
          <%= player %>
        </span>

        <% if player.winning_submissions_for(@game).any? %>
          <span class="badge badge-light badge-pill float-right">
            <%= player.winning_submissions_for(@game).count %>
          </span>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
