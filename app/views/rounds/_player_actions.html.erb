<div class="list-group">
  <%= link_to short_game_url(@game), class: 'list-group-item list-group-item-action' do %>
    Invite people to this game:
    <%= short_game_url(@game).remove('http://').remove('https://www.') %>
  <% end %>

  <%= link_to 'End this round without a winner',
    end_game_round_path(@game),
    method: :post,
    class: 'list-group-item list-group-item-action',
    data: { confirm: 'Are you sure you want to end this round for all players?' }
  %>
</div>
