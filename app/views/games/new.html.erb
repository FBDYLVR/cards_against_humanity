<div class="container">
  <% if @current_player %>
    <p>
      Hey <%= @current_player %>.
    </p>

    <% if @current_player.game %>
      <h1>
        <%= button_to 'Get back to your current game',
          @current_player.game,
          class: 'btn btn-primary btn-lg btn-block'
        %>
      </h1>
    <% end %>
  <% end %>

  <h1>
    <%= button_to 'Start a new game', games_path, class: 'btn btn-primary btn-lg btn-block' %>
  </h1>

  <div class="mt-3">
    <p>Or join an existing game:</p>

    <%= form_with model: Game.new, url: find_games_path, class: 'form-inline' do |form| %>

      <div class="form-group mb-0 mr-2">
        <%= form.text_field :slug, class: 'form-control', placeholder: 'Game code, like ABC123' %>
      </div>

      <%= form.submit 'Join', class: 'btn btn-primary ' %>
    <% end %>
  </div>

  <% if @current_player %>
    <small>
      <%= link_to 'Sign out', player_path(@current_player), method: :delete %>
    </small>
  <% end %>
</div>
